<h3>Document a New Creature</h3>

<%= form_for [@universe, @creature], :url => universe_creatures_path do |f| %>
    <% if @creature.errors.any? %>
      <div id="error_explanation">
        <h2>There were some errors:</h2>
  
        <ul>
          <% @creature.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
  
    <div class="field"> 
      <%= f.label :name %><br>
      <%= f.text_field :name %>
    </div><br>

    <div class="field">
      <%= f.label :description %><br>
      <%= f.text_field :description %>
    </div><br>

    <div class="field">
    <%= f.label :wisdom %><br>
    <%= f.text_field :wisdom %>
  </div><br>
 
    <div class="actions">
      <%= f.submit %>
    </div>
  <% end %>