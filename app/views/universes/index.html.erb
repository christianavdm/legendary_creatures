<% @universes.each do |universe| %>
    <h3><%= universe.name %></h3>
    <div id="universe-<%= universe.id %>">
    <button class="js-more" data-id="<%= universe.id %>">Learn More</button>
    </div>
    <br />
<% end %>

<div id="new-universe">
<h3>Create a Universe</h3>

<%= render 'form' %>
</div>