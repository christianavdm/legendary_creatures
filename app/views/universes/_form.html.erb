<%= form_for(@universe) do |f| %>
    <% if @universe.errors.any? %>
      <div id="error_explanation">
        <h2>There were some errors:</h2>
  
        <ul>
          <% @universe.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
  
    <div class="field">
      <%= f.label :name %><br>
      <%= f.text_field :name %>
    </div>

    <div class="field">
      <%= f.label :description %><br>
      <%= f.text_field :description %>
    </div>
 
    <div class="actions">
      <%= f.submit %>
    </div>
  <% end %>